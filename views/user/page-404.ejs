<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>404 • Page Not Found</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* small custom styles to complement Tailwind */
      .neon {
        text-shadow:
          0 0 8px rgba(99, 102, 241, 0.7),
          0 0 24px rgba(99, 102, 241, 0.35);
      }
      .floaty {
        animation: floaty 3s ease-in-out infinite;
      }
      @keyframes floaty {
        0% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
        100% {
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-black via-gray-800 to-gray-950 text-slate-100 flex items-center justify-center p-6"
  >
    <main
      class="max-w-4xl w-full rounded-2xl bg-gradient-to-b from-white/5 to-white/3 backdrop-blur-md shadow-2xl p-10 md:p-16"
    >
      <div class="flex flex-col md:flex-row items-center gap-8">
        <!-- left: graphic -->
        <figure class="flex-1 flex items-center justify-center">
          <div
            class="w-56 h-56 md:w-72 md:h-72 rounded-2xl bg-gradient-to-tr from-indigo-950 to-indigo-500 flex items-center justify-center relative overflow-hidden shadow-xl"
          >
            <!-- Animated 404 circles -->
            <svg
              viewBox="0 0 200 200"
              class="absolute inset-0 w-full h-full opacity-20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <defs>
                <linearGradient id="g1" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" stop-color="#8b5cf6" />
                  <stop offset="100%" stop-color="#06b6d4" />
                </linearGradient>
              </defs>
              <circle cx="30" cy="30" r="30" fill="url(#g1)"></circle>
              <circle cx="170" cy="170" r="40" fill="#7c3aed"></circle>
              <circle cx="150" cy="50" r="20" fill="#06b6d4"></circle>
            </svg>

            <div class="relative z-10 text-center">
              <div id="num" class="text-6xl md:text-7xl font-extrabold neon">404</div>
              <div class="mt-2 text-sm text-indigo-100/80">Page Not Found</div>
            </div>

            <!-- little floating paper plane -->
            <div class="absolute -right-6 -top-6 floaty" aria-hidden>
              <svg
                width="80"
                height="80"
                viewBox="0 0 24 24"
                fill="none"
                stroke="white"
                stroke-width="1"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="opacity-80"
              >
                <path d="M22 2L11 13"></path>
                <path d="M22 2l-7 20 2-7 7-13z"></path>
              </svg>
            </div>
          </div>
        </figure>

        <!-- right: message + actions -->
        <section class="flex-1">
          <h1 class="text-3xl md:text-4xl font-extrabold">Oops — we can't find that page.</h1>
          <p class="mt-3 text-slate-200/90 leading-relaxed">
            It looks like the page you're looking for doesn't exist, moved, or was mistyped. Try one
            of the options below or search the site.
          </p>

          <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
            <button
              id="homeBtn"
              class="w-full py-3 rounded-lg bg-gray-500 hover:bg-gray-600 transition font-semibold shadow"
            >
              Take me home
            </button>
            <button
              id="backBtn"
              class="w-full py-3 rounded-lg border border-indigo-400/40 hover:bg-indigo-700/20 transition font-medium"
            >
              Go back
            </button>
          </div>
          <div id="results" class="mt-4 text-sm text-slate-200/80"></div>

          <nav aria-label="helpful links" class="mt-6">
            <h2 class="text-sm text-indigo-100/80 uppercase tracking-wider font-semibold">
              Helpful links
            </h2>
            <ul class="mt-3 grid grid-cols-2 gap-2 text-slate-200/90">
              <li><a href="/" class="underline underline-offset-4">Home</a></li>
              <li><a href="/shop" class="underline underline-offset-4">Shop</a></li>
            </ul>
          </nav>

          <p class="mt-6 text-xs text-slate-300/60">
            If you need help, email
            <a href="mailto:sachinvk867@gmail.com" class="underline">shades@example.com</a>
          </p>
        </section>
      </div>
    </main>

    <script>
      // Small interactive behaviour
      const homeBtn = document.getElementById('homeBtn');
      const backBtn = document.getElementById('backBtn');
      const searchBtn = document.getElementById('searchBtn');
      const qInput = document.getElementById('q');
      const results = document.getElementById('results');

      homeBtn.addEventListener('click', () => {
        // go to homepage — change this URL to your site's home
        window.location.href = '/';
      });

      backBtn.addEventListener('click', () => {
        if (history.length > 1) history.back();
        else window.location.href = '/';
      });

      searchBtn.addEventListener('click', () => doSearch());
      qInput.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') doSearch();
      });

      function doSearch() {
        const q = qInput.value.trim();
        if (!q) {
          results.textContent = 'Please enter a search term.';
          return;
        }

        // Fake search results — replace with real search integration if you have one
        results.innerHTML = `Searching for "<strong>${escapeHtml(q)}</strong>"...`;
        setTimeout(() => {
          results.innerHTML = `We couldn't find an exact page for "<strong>${escapeHtml(q)}</strong>". Try these instead:`;
          const list = document.createElement('ul');
          list.className = 'mt-2 space-y-1 text-slate-200/90';
          const suggestions = [
            { title: 'Home', href: '/' },
            { title: 'Shop - All products', href: '/shop' },
            { title: 'Contact', href: '/contact' },
          ];
          suggestions.forEach((s) => {
            const li = document.createElement('li');
            li.innerHTML = `<a href="${s.href}" class="underline">${s.title}</a>`;
            list.appendChild(li);
          });
          results.appendChild(list);
        }, 700);
      }

      function escapeHtml(str) {
        return str.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
      }

      // small micro-interaction: pulse the 404 numbers occasionally
      const numEl = document.getElementById('num');
      setInterval(() => {
        numEl.classList.add('scale-105');
        setTimeout(() => numEl.classList.remove('scale-105'), 220);
      }, 2500);
    </script>
  </body>
</html>
