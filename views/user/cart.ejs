<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - Your Store</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #000000;
            --text-color: #333333;
            --light-bg: #f8f9fa;
            --border-color: #dee2e6;
            --card-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            --purple-color: #000000;
        }

        body {
            background-color: var(--light-bg);
            color: var(--text-color);
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
        }

        .cart-header {
            background-color: white;
            border-bottom: 1px solid var(--border-color);
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }

        .breadcrumb-item+.breadcrumb-item::before {
            content: ">";
        }

        .cart-section, .order-summary {
            background-color: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
        }

        .cart-section h3, .order-summary h4 {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .cart-item {
            display: flex;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid var(--border-color);
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .cart-item img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            background-color: #f5f5f5;
            border-radius: 5px;
            margin-right: 1rem;
        }

        .item-details {
            flex: 1;
        }

        .item-details h5 {
            font-size: 0.9rem;
            font-weight: 700;
            margin-bottom: 0.3rem;
        }

        .item-details p {
            font-size: 0.8rem;
            color: #6c757d;
            margin-bottom: 0.3rem;
        }

        .quantity-control {
            display: flex;
            align-items: center;
            gap: 0;
            margin-bottom: 0.5rem;
        }

        .quantity-control button {
            width: 30px;
            height: 30px;
            border: 1px solid var(--border-color);
            background-color: #fff;
            color: var(--text-color);
            font-size: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0;
            transition: background-color 0.3s ease;
        }

        .quantity-control button:hover {
            background-color: #f1f3f5;
        }

        .quantity-control button:disabled {
            background-color: #e9ecef;
            cursor: not-allowed;
            opacity: 0.5;
        }

        .quantity-control input {
            width: 40px;
            text-align: center;
            border: 1px solid var(--border-color);
            border-left: none;
            border-right: none;
            height: 30px;
            font-size: 0.85rem;
        }

        .item-price {
            font-size: 0.9rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-left: 1rem;
        }

        .item-actions {
            display: flex;
            gap: 1rem;
            font-size: 0.8rem;
        }

        .item-actions a {
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.3rem;
            transition: color 0.3s ease;
        }

        .item-actions .favorite {
            color: #007bff;
        }

        .item-actions .favorite:hover {
            color: #0056b3;
        }

        .item-actions .favorite i {
            color: #a1bffa;
        }

        .item-actions .remove {
            color: #dc3545;
        }

        .item-actions .remove:hover {
            color: #b02a37;
        }

        .back-to-shop {
            margin-top: 1rem;
            color: #007bff;
            font-size: 0.9rem;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .back-to-shop:hover {
            color: #0056b3;
        }

        .order-summary {
            
            top: 20px;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.75rem;
            font-size: 0.9rem;
        }

        .summary-item.discount {
            color: #000;
        }

        .summary-item.free {
            color: #28a745;
        }

        .summary-item.total {
            font-size: 1rem;
            font-weight: 700;
            margin-top: 0.75rem;
        }

        .checkout-btn {
            width: 100%;
            background-color: var(--purple-color);
            color: white;
            border: none;
            border-radius: 5px;
            padding: 0.75rem;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

        .checkout-btn:hover {
            background-color: #1d1d1d;
        }

        .checkout-btn:disabled {
            background-color: #6c757d;
            cursor: not-allowed;
        }

        @media (max-width: 991.98px) {
            .cart-item img {
                width: 50px;
                height: 50px;
            }

            .item-details h5 {
                font-size: 0.85rem;
            }

            .item-price {
                font-size: 0.85rem;
            }

            .quantity-control input {
                width: 35px;
            }
        }

        @media (max-width: 767.98px) {
            .cart-section, .order-summary {
                padding: 1rem;
            }

            .cart-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .cart-item img {
                margin-bottom: 0.5rem;
            }

            .item-price {
                margin-left: 0;
                margin-top: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <%-include("../../views/partials/user/header")%>
    <div class="cart-header">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Cart</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="container mb-5">
        <div class="row g-4">
            <!-- Shopping Cart Section -->
            <div class="col-lg-8">
                <div class="cart-section">
                    <h3>Shopping Cart</h3>
                    <div id="cart-items">
                        <div class="cart-item">
                            <img src="https://via.placeholder.com/60?text=VR+Headset" alt="Apple Vision Pro VR Headset">
                            <div class="item-details">
                                <h5>APPLE VISION PRO VR HEADSET</h5>
                                <p>Model: VSN098765</p>
                                <p>Color: Silver | Size: 512GB</p>
                                <div class="quantity-control">
                                    <button onclick="updateQuantity(0, -1)" aria-label="Decrease quantity">-</button>
                                    <input type="text" value="1" readonly aria-label="Quantity">
                                    <button onclick="updateQuantity(0, 1)" aria-label="Increase quantity">+</button>
                                </div>
                                <div class="item-actions">
                                    <a href="#" class="favorite" onclick="moveToWishlist(0, event)" aria-label="Move to wishlist">
                                        <i class="far fa-heart"></i> MOVE TO FAVORITES
                                    </a>
                                    <a href="#" class="remove" onclick="removeFromCart(0, event)" aria-label="Remove from cart">
                                        <i class="fas fa-times"></i> REMOVE
                                    </a>
                                </div>
                            </div>
                            <div class="item-price">â‚¹2,60,000.00</div>
                        </div>
                        <div class="cart-item">
                            <img src="https://via.placeholder.com/60?text=Mouse" alt="Signature AI Edition M750 Wireless Mouse">
                            <div class="item-details">
                                <h5>SIGNATURE AI EDITION M750 WIRELESS MOUSE</h5>
                                <p>Model: M7505</p>
                                <p>Color: White</p>
                                <div class="quantity-control">
                                    <button onclick="updateQuantity(1, -1)" aria-label="Decrease quantity">-</button>
                                    <input type="text" value="1" readonly aria-label="Quantity">
                                    <button onclick="updateQuantity(1, 1)" aria-label="Increase quantity">+</button>
                                </div>
                                <div class="item-actions">
                                    <a href="#" class="favorite" onclick="moveToWishlist(1, event)" aria-label="Move to wishlist">
                                        <i class="far fa-heart"></i> MOVE TO FAVORITES
                                    </a>
                                    <a href="#" class="remove" onclick="removeFromCart(1, event)" aria-label="Remove from cart">
                                        <i class="fas fa-times"></i> REMOVE
                                    </a>
                                </div>
                            </div>
                            <div class="item-price">â‚¹9,999.00</div>
                        </div>
                    </div>
                    <a href="/shop" class="back-to-shop">BACK TO SHOP</a>
                </div>
            </div>
            <!-- Order Summary Section -->
            <div class="col-lg-4">
                <div class="order-summary">
                    <h4>Order Summary</h4>
                    <div id="order-summary-items">
                        <div class="summary-item">
                            <span>Subtotal (2 items)</span>
                            <span>â‚¹43,999.00</span>
                        </div>
                        <div class="summary-item discount">
                            <span>Discounts</span>
                            <span>-â‚¹74,500.00</span>
                        </div>
                        <div class="summary-item">
                            <span>Delivery Charge</span>
                            <span class="free">â‚¹0.00 FREE DELIVERY</span>
                        </div>
                        <div class="summary-item">
                            <span>GST (18%)</span>
                            <span>â‚¹8,510.00</span>
                        </div>
                        <div class="summary-item total">
                            <span>TOTAL</span>
                            <span>â‚¹2,69,499.00</span>
                        </div>
                    </div>
                    <button id="checkout-btn" class="checkout-btn">Checkout</button>
                    <div id="cart-error" class="error-message"></div>
                </div>
            </div>
        </div>
        
    </div>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Simplified JavaScript for demo purposes (since we're hardcoding the UI)
        document.addEventListener('DOMContentLoaded', function() {
            const MAX_QUANTITY_PER_PRODUCT = 10;
            let cartData = {
                items: [
                    {
                        product: {
                            name: "APPLE VISION PRO VR HEADSET",
                            model: "VSN098765",
                            color: "Silver",
                            size: "512GB",
                            salePrice: 260000,
                            quantity: 10
                        },
                        quantity: 1,
                        productId: "1"
                    },
                    {
                        product: {
                            name: "SIGNATURE AI EDITION M750 WIRELESS MOUSE",
                            model: "M7505",
                            color: "White",
                            salePrice: 9999,
                            quantity: 10
                        },
                        quantity: 1,
                        productId: "2"
                    }
                ]
            };

            window.updateQuantity = function(index, change) {
                const item = cartData.items[index];
                const newQuantity = item.quantity + change;

                if (newQuantity < 1) return;
                if (newQuantity > item.product.quantity) {
                    showToast(`Only ${item.product.quantity} items left in stock.`, 'error');
                    return;
                }
                if (newQuantity > MAX_QUANTITY_PER_PRODUCT) {
                    showToast(`Maximum quantity is ${MAX_QUANTITY_PER_PRODUCT}.`, 'error');
                    return;
                }

                item.quantity = newQuantity;
                renderCart();
                showToast('Quantity updated!', 'success');
            };

            window.removeFromCart = function(index, event) {
                event.preventDefault();
                cartData.items.splice(index, 1);
                renderCart();
                showToast('Product removed from cart!', 'success');
            };

            window.moveToWishlist = function(index, event) {
                event.preventDefault();
                const item = cartData.items[index];
                cartData.items.splice(index, 1);
                renderCart();
                showToast('Product moved to wishlist!', 'success');
            };

            function renderCart() {
                const cartItemsContainer = document.getElementById('cart-items');
                const orderSummaryItems = document.getElementById('order-summary-items');
                const checkoutBtn = document.getElementById('checkout-btn');

                cartItemsContainer.innerHTML = '';
                let subtotal = 0;
                const deliveryCharge = 0;
                const gstRate = 0.18;

                if (!cartData.items.length) {
                    cartItemsContainer.innerHTML = '<p>Your cart is empty.</p>';
                    checkoutBtn.disabled = true;
                    orderSummaryItems.innerHTML = `
                        <div class="summary-item">
                            <span>Subtotal (0 items)</span>
                            <span>â‚¹0.00</span>
                        </div>
                        <div class="summary-item total">
                            <span>TOTAL</span>
                            <span>â‚¹0.00</span>
                        </div>
                    `;
                    return;
                }

                cartData.items.forEach((item, index) => {
                    const itemTotal = item.product.salePrice * item.quantity;
                    subtotal += itemTotal;

                    const cartItem = document.createElement('div');
                    cartItem.className = 'cart-item';
                    cartItem.innerHTML = `
                        <img src="https://via.placeholder.com/60?text=${item.product.name.split(' ')[0]}" alt="${item.product.name}">
                        <div class="item-details">
                            <h5>${item.product.name}</h5>
                            <p>Model: ${item.product.model}</p>
                            <p>Color: ${item.product.color}${item.product.size ? ' | Size: ' + item.product.size : ''}</p>
                            <div class="quantity-control">
                                <button onclick="updateQuantity(${index}, -1)" ${item.quantity === 1 ? 'disabled' : ''} aria-label="Decrease quantity">-</button>
                                <input type="text" value="${item.quantity}" readonly aria-label="Quantity">
                                <button onclick="updateQuantity(${index}, 1)" ${item.quantity >= Math.min(item.product.quantity, MAX_QUANTITY_PER_PRODUCT) ? 'disabled' : ''} aria-label="Increase quantity">+</button>
                            </div>
                            <div class="item-actions">
                                <a href="#" class="favorite" onclick="moveToWishlist(${index}, event)" aria-label="Move to wishlist">
                                    <i class="far fa-heart"></i> MOVE TO FAVORITES
                                </a>
                                <a href="#" class="remove" onclick="removeFromCart(${index}, event)" aria-label="Remove from cart">
                                    <i class="fas fa-times"></i> REMOVE
                                </a>
                            </div>
                        </div>
                        <div class="item-price">â‚¹${itemTotal.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</div>
                    `;
                    cartItemsContainer.appendChild(cartItem);
                });

                const gst = subtotal * gstRate;
                const total = subtotal + deliveryCharge + gst;

                orderSummaryItems.innerHTML = `
                    <div class="summary-item">
                        <span>Subtotal (${cartData.items.length} items)</span>
                        <span>â‚¹${subtotal.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</span>
                    </div>
                    <div class="summary-item discount">
                        <span>Discounts</span>
                        <span>-â‚¹0.00</span>
                    </div>
                    <div class="summary-item">
                        <span>Delivery Charge</span>
                        <span class="free">â‚¹${deliveryCharge.toLocaleString('en-IN', { minimumFractionDigits: 2 })} FREE DELIVERY</span>
                    </div>
                    <div class="summary-item">
                        <span>GST (18%)</span>
                        <span>â‚¹${gst.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</span>
                    </div>
                    <div class="summary-item total">
                        <span>TOTAL</span>
                        <span>â‚¹${total.toLocaleString('en-IN', { minimumFractionDigits: 2 })}</span>
                    </div>
                `;

                checkoutBtn.disabled = false;
            }

            function showToast(message, type = 'info') {
                let toastContainer = document.querySelector('.toast-container');
                if (!toastContainer) {
                    toastContainer = document.createElement('div');
                    toastContainer.className = 'toast-container position-fixed bottom-0 end-0 p-3';
                    document.body.appendChild(toastContainer);
                }

                const toastId = 'toast-' + Date.now();
                const toast = document.createElement('div');
                toast.className = `toast align-items-center text-white bg-${type === 'error' ? 'danger' : type} border-0`;
                toast.id = toastId;
                toast.setAttribute('role', 'alert');
                toast.setAttribute('aria-live', 'assertive');
                toast.setAttribute('aria-atomic', 'true');

                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                `;

                toastContainer.appendChild(toast);

                const bsToast = new bootstrap.Toast(toast, {
                    autohide: true,
                    delay: 3000
                });
                bsToast.show();

                toast.addEventListener('hidden.bs.toast', function() {
                    toast.remove();
                });
            }

            renderCart();
        });
    </script>
    <%-include("../../views/partials/user/footer")%>
</body>
</html>