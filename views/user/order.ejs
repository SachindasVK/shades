                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  orderDbId,
                  reason: 'User cancelled the payment.'
                })
              });
              
showToast('Cancelled', 'Payment process was cancelled.', 'info');
              
            }
          },
          theme: { color: "#000000" }
        };

        const rzp = new Razorpay(options);

