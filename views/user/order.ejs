                              </div>
                            </div>
                            <div class="status-section">
                              <div class="status-label">Order Status</div>
                              <div class="order-status <%= (order.status || '').toLowerCase() %>">
                                <%= order.status || 'Unknown' %>
                              </div>
                            </div>
                          </div>
                </div>
              </div>
              <% }) %>
