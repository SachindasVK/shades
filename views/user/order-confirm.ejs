<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --primary-color: #1f2937;
            --success-color: #22c55e;
            --text-color: #374151;
            --light-bg: #f9fafb;
            --border-color: #e5e7eb;
            --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
        }

        body {
            background-color: var(--light-bg);
            color: var(--text-color);
            font-family: 'Inter', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 1.5rem;
        }

        .progress-section {
            background-color: white;
            border-radius: 8px;
            padding: 1.25rem;
            box-shadow: var(--card-shadow);
            margin-bottom: 1.5rem;
        }

        .progress-step {
            display: flex;
            align-items: center;
            flex: 1;
            justify-content: center;
        }

        .progress-step .step-circle {
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            font-weight: 600;
            background-color: #e5e7eb;
            color: #6b7280;
            transition: all 0.3s ease;
        }

        .progress-step.completed .step-circle {
            background-color: var(--primary-color);
            color: white;
        }

        .progress-step .step-label {
            margin-left: 0.75rem;
            font-size: 0.9rem;
            font-weight: 500;
            color: #6b7280;
        }

        .progress-step.completed .step-label {
            color: var(--primary-color);
            font-weight: 600;
        }

        .main-section {
            background-color: white;
            border-radius: 8px;
            padding: 2rem;
            box-shadow: var(--card-shadow);
            max-width: 600px;
            margin: 0 auto;
        }

        /* Loading Animation */
        .loading-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 3rem;
            text-align: center;
        }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid #e5e7eb;
            border-top: 4px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 1.5rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .loading-text {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 0.5rem;
        }

        .loading-subtext {
            color: #6b7280;
            font-size: 0.9rem;
        }

        /* Success State */
        .success-container {
            display: none;
            text-align: center;
            padding: 2rem;
            animation: fadeIn 0.5s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .success-icon {
            width: 64px;
            height: 64px;
            background-color: var(--success-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            box-shadow: 0 4px 12px rgba(34, 197, 94, 0.2);
        }

        .checkmark {
            font-size: 1.75rem;
            color: white;
            animation: checkmarkAnimation 0.5s ease-in-out;
        }

        @keyframes checkmarkAnimation {
            0% { transform: scale(0); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }

        .success-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-color);
            margin-bottom: 0.5rem;
        }

        .success-subtitle {
            font-size: 1rem;
            color: #6b7280;
            margin-bottom: 1.5rem;
        }

        .order-details {
            background-color: #f9fafb;
            border-radius: 8px;
            padding: 1.5rem;
            margin: 1.5rem 0;
            text-align: left;
        }

        .order-details h3 {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 1rem;
        }

        .order-detail-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--border-color);
            font-size: 0.9rem;
        }

        .order-detail-row:last-child {
            border-bottom: none;
            font-weight: 600;
        }

        .order-detail-label {
            color: #6b7280;
        }

        .order-detail-value {
            color: var(--text-color);
            font-weight: 500;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .action-buttons a button {
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background-color: #111827;
        }

        .btn-secondary {
            background-color: transparent;
            color: var(--primary-color);
            border: 1px solid var(--primary-color);
        }

        .btn-secondary:hover {
            background-color: #f3f4f6;
        }

        .toast {
            position: fixed;
            bottom: 20px;
            right: 20px;
            min-width: 250px;
            padding: 12px 24px;
            border-radius: 6px;
            color: white;
            font-weight: 500;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }

        .toast.success {
            background-color: var(--success-color);
        }

        @media (max-width: 767.98px) {
            .main-section {
                padding: 1.5rem;
            }

            .progress-step .step-label {
                display: none;
            }

            .action-buttons {
                flex-direction: column;
                gap: 0.75rem;
            }

            .action-buttons a button {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>

<body>
    <%-include("../../views/partials/user/header")%>

    <div class="container">
        <!-- Progress Indicator -->
        <div class="progress-section">
            <div style="display: flex; justify-content: space-between; gap: 1rem;">
                <div class="progress-step completed">
                    <div class="step-circle" aria-label="Step 1: Address">1</div>
                    <span class="step-label">Address</span>
                </div>
                <div class="progress-step completed">
                    <div class="step-circle" aria-label="Step 2: Shipping">2</div>
                    <span class="step-label">Shipping</span>
                </div>
                <div class="progress-step completed">
                    <div class="step-circle" aria-label="Step 3: Payment">3</div>
                    <span class="step-label">Payment</span>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-section">
            <!-- Loading State -->
            <div id="loadingState" class="loading-container">
                <div class="loading-spinner"></div>
                <h2 class="loading-text">Processing Your Order</h2>
                <p class="loading-subtext">Please wait while we confirm your order...</p>
            </div>

            <!-- Success State -->
            <div id="successState" class="success-container">
                <div class="success-icon">
                    <i class="fas fa-check checkmark"></i>
                </div>
                <h2 class="success-title">Order Confirmed!</h2>
                <p class="success-subtitle">Thank you for your purchase. Your order is being processed and will be shipped soon.</p>

                <div class="order-details">
                    <h3>Order Details</h3>
                    <div class="order-detail-row">
                        <span class="order-detail-label">Order Number:</span>
                        <span class="order-detail-value" id="orderNumber"></span>
                    </div>
                    <div class="order-detail-row">
                        <span class="order-detail-label">Payment Method:</span>
                        <span class="order-detail-value" id="paymentMethod"></span>
                    </div>
                    <div class="order-detail-row">
                        <span class="order-detail-label">Order Date:</span>
                        <span class="order-detail-value" id="orderDate"></span>
                    </div>
                    <div class="order-detail-row">
                        <span class="order-detail-label">Expected Delivery:</span>
                        <span class="order-detail-value" id="deliveryDate"></span>
                    </div>
                    <div class="order-detail-row">
                        <span class="order-detail-label">Total Amount:</span>
                        <span class="order-detail-value" id="totalAmount"></span>
                    </div>
                </div>

                <div class="action-buttons">
                    <a href="/orders">
                        <button class="btn-primary">
                            <i class="fas fa-list"></i> View Orders
                        </button>
                    </a>
                    <a href="/">
                        <button class="btn-secondary">
                            <i class="fas fa-home"></i> Continue Shopping
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toastContainer"></div>

    <script>
        // Get dynamic data from server (if available)
        const orderData = {
            orderNumber: '<%= typeof orderNumber !== "undefined" ? orderNumber : "" %>',
            paymentMethod: '<%= typeof paymentMethod !== "undefined" ? paymentMethod : "" %>',
            totalAmount: '<%= typeof totalAmount !== "undefined" ? totalAmount : "" %>',
            deliveryDate: '<%= typeof expectedDeliveryDate !== "undefined" ? expectedDeliveryDate : "" %>'
        };

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            const loadingState = document.getElementById('loadingState');
            const successState = document.getElementById('successState');

            // Show loading for 2 seconds, then show success
            setTimeout(() => {
                loadingState.style.display = 'none';
                successState.style.display = 'block';
                showToast('Order confirmed successfully!', 'success');
                updateOrderDetails();
            }, 2000);
        });

        // Update order details with dynamic data
        function updateOrderDetails() {
            const urlParams = new URLSearchParams(window.location.search);
            const finalOrderData = {
                orderNumber: orderData.orderNumber || urlParams.get('orderNumber') || `#ORD-${new Date().getFullYear()}-${Math.floor(100000 + Math.random() * 900000)}`,
                paymentMethod: orderData.paymentMethod || urlParams.get('paymentMethod') || 'online',
                totalAmount: orderData.totalAmount || urlParams.get('totalAmount') || 'â‚¹0.00',
                deliveryDate: orderData.deliveryDate || urlParams.get('deliveryDate')
            };

            document.getElementById('orderNumber').textContent = finalOrderData.orderNumber;

            let displayMethod = 'Online Payment';
            if (finalOrderData.paymentMethod === 'cod') displayMethod = 'Cash on Delivery';
            else if (finalOrderData.paymentMethod === 'wallet') displayMethod = 'Wallet Payment';
            document.getElementById('paymentMethod').textContent = displayMethod;

            document.getElementById('totalAmount').textContent = finalOrderData.totalAmount;

            const today = new Date();
            document.getElementById('orderDate').textContent = today.toLocaleDateString('en-IN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });

            if (finalOrderData.deliveryDate) {
                document.getElementById('deliveryDate').textContent = finalOrderData.deliveryDate;
            } else {
                const deliveryDate = new Date(today);
                deliveryDate.setDate(deliveryDate.getDate() + 5);
                document.getElementById('deliveryDate').textContent = deliveryDate.toLocaleDateString('en-IN', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            }
        }

        // Toast notification
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            toastContainer.appendChild(toast);

            setTimeout(() => toast.classList.add('show'), 100);
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }
    </script>

    <%-include("../../views/partials/user/footer")%>
</body>

</html>