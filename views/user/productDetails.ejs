                    <a href="/shop" class="text-red-700 underline hover:text-red-800">Return to Shop</a>
                </div>
                <% } else { %>
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <!-- Product Images -->
                        <div>
                            <div class="image-zoom-container mb-4">
                                <div class="product-img-container" id="imageContainer" role="region"
                                    aria-label="Product image with zoom">
                                    <img src="<%= product.productImage?.[0] || product.images?.[0] || '/images/default-product.jpg' %>"
