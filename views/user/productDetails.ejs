                                        id="mainImage">
                                </div>
                            </div>
                            <div class="flex items-center text-gray-500 text-sm mb-4">
                                <i class="fas fa-search-plus mr-2"></i>
                                Hover over image to zoom
                            </div>
                            <div class="flex gap-2 overflow-x-auto" role="tablist">
                                <% (product.productImage || product.images || []).slice(0, 5).forEach((img, index)=> {
                                    %>
                                    <img src="<%= img || '/images/default-product.jpg' %>"
                                        class="thumbnail-img <%= index === 0 ? 'active' : '' %>"
                                        alt="Thumbnail <%= index + 1 %> of <%= product.name || product.productName %>"
                                        data-index="<%= index %>" role="tab"
                                        aria-selected="<%= index === 0 ? 'true' : 'false' %>">
