    <%- include("../../views/partials/user/footer") %>

    <script>
        // Navigation behavior
        document.querySelectorAll('.profile-nav-item').forEach(item => {
            item.addEventListener('click', () => {
                document.querySelectorAll('.profile-nav-item').forEach(el => {
                    el.classList.remove('active');
                });
                item.classList.add('active');
                
                // Show/hide sections
                document.querySelectorAll('.profile-section').forEach(section => {
                    section.style.display = 'none';
                });
                const sectionId = item.getAttribute('data-section');
                if (sectionId) {
                    document.getElementById(sectionId).style.display = 'block';
                }
            });
        });
        
        // Modal functions
        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'flex';
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }
        
        // Close modal on clicking outside
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.style.display = 'none';
                }
            });
        });
        
        // Close modal with close button
        document.querySelectorAll('.modal-close').forEach(btn => {
            btn.addEventListener('click', () => {
                const modal = btn.closest('.modal');
                modal.style.display = 'none';
            });
        });
        
        // Form validation and submission
        function submitAddress(isEdit = false) {
            const formId = isEdit ? 'edit-address-form' : 'add-address-form';
            const form = document.getElementById(formId);
            const pincodeInput = form.querySelector(isEdit ? '#edit-pincode' : '#pincode');
            const pincodeError = form.querySelector(isEdit ? '#edit-pincode-error' : '#pincode-error');
            
            if (!pincodeInput.value.match(/^\d{5,6}$/)) {
                pincodeInput.classList.add('error');
                pincodeError.textContent = 'Please enter a valid 5 or 6 digit pincode';
                return;
            }
            
            pincodeInput.classList.remove('error');
            pincodeError.textContent = '';
            alert(isEdit ? 'Address updated!' : 'Address added!');
            closeModal(isEdit ? 'edit-address-modal' : 'add-address-modal');
        }
        
        function submitCard() {
            const form = document.getElementById('add-card-form');
            const cardNumber = form.querySelector('#card-number');
            const expiryDate = form.querySelector('#expiry-date');
            const cvv = form.querySelector('#cvv');
            const cardNumberError = form.querySelector('#card-number-error');
            const expiryDateError = form.querySelector('#expiry-date-error');
            const cvvError = form.querySelector('#cvv-error');
            
            let isValid = true;
            
            if (!cardNumber.value.match(/^\d{16}$/)) {
                cardNumber.classList.add('error');
                cardNumberError.textContent = 'Please enter a valid 16-digit card number';
                isValid = false;
            } else {
                cardNumber.classList.remove('error');
                cardNumberError.textContent = '';
            }
            
            if (!expiryDate.value.match(/^\d{2}\/\d{2}$/)) {
                expiryDate.classList.add('error');
                expiryDateError.textContent = 'Please enter a valid expiry date (MM/YY)';
                isValid = false;
            } else {
                expiryDate.classList.remove('error');
                expiryDateError.textContent = '';
            }
            
            if (!cvv.value.match(/^\d{3,4}$/)) {
                cvv.classList.add('error');
                cvvError.textContent = 'Please enter a valid CVV';
                isValid = false;
            } else {
                cvv.classList.remove('error');
                cvvError.textContent = '';
            }
            
            if (isValid) {
                alert('Card added!');
                closeModal('add-card-modal');
            }
        }
        
        function submitProfile() {
            const form = document.getElementById('edit-profile-form');
            const phoneInput = form.querySelector('#phone');
            const phoneError = form.querySelector('#phone-error');
            
            if (!phoneInput.value.match(/^\d{10}$/)) {
                phoneInput.classList.add('error');
                phoneError.textContent = 'Please enter a valid 10-digit phone number';
                return;
            }
            
            phoneInput.classList.remove('error');
            phoneError.textContent = '';
            alert('Profile updated!');
            closeModal('edit-profile-modal');
        }
        
        function submitPassword() {
            const form = document.getElementById('change-password-form');
            const currentPassword = form.querySelector('#current-password');
            const newPassword = form.querySelector('#new-password');
            const confirmPassword = form.querySelector('#confirm-password');
            const currentPasswordError = form.querySelector('#current-password-error');
            const newPasswordError = form.querySelector('#new-password-error');
            const confirmPasswordError = form.querySelector('#confirm-password-error');
            
            let isValid = true;
            
            if (!currentPassword.value) {
                currentPassword.classList.add('error');
                currentPasswordError.textContent = 'Please enter your current password';
                isValid = false;
            } else {
                currentPassword.classList.remove('error');
                currentPasswordError.textContent = '';
            }
            
            if (newPassword.value.length < 8) {
                newPassword.classList.add('error');
                newPasswordError.textContent = 'New password must be at least 8 characters';
                isValid = false;
            } else {
                newPassword.classList.remove('error');
                newPasswordError.textContent = '';
            }
            
            if (newPassword.value !== confirmPassword.value) {
                confirmPassword.classList.add('error');
                confirmPasswordError.textContent = 'Passwords do not match';
                isValid = false;
            } else {
                confirmPassword.classList.remove('error');
                confirmPasswordError.textContent = '';
            }
            
            if (isValid) {
                alert('Password changed!');
                closeModal('change-password-modal');
            }
        }
        
        function deleteAccount() {
            const password = document.getElementById('delete-password');
            const passwordError = document.getElementById('delete-password-error');
            
            if (!password.value) {
                password.classList.add('error');
                passwordError.textContent = 'Please enter your password to confirm';
                return;
            }
            
            password.classList.remove('error');
            passwordError.textContent = '';
            alert('Account deletion requested!');
            closeModal('delete-account-modal');
        }
        
        function submitTicket() {
            const form = document.getElementById('raise-ticket-form');
            const subject = form.querySelector('#ticket-subject');
            const description = form.querySelector('#ticket-description');
            
            if (!subject.value || !description.value) {
                if (!subject.value) subject.classList.add('error');
                if (!description.value) description.classList.add('error');
                return;
            }
            
            subject.classList.remove('error');
            description.classList.remove('error');
            alert('Support ticket submitted!');
            closeModal('raise-ticket-modal');
        }
        
        // Edit button placeholder
        document.querySelectorAll('.edit-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                if (!this.getAttribute('onclick')) {
                    alert('Edit profile information');
                }
            });
        });
        
        // Change photo placeholder
        document.querySelector('.change-photo').addEventListener('click', function() {
            alert('Upload a new profile photo');
        });
    </script>
