        .menu-item {
            border-bottom: 1px solid #f3f4f6;
        }
        .menu-link {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            color: #4b5563;
            font-size: 0.875rem;
            text-decoration: none;
