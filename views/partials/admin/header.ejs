<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SHADES - Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
 


  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'shades-black': '#111111',
            'shades-gray': '#F5F5F7',
          }
        }
      }
    }
  </script>
</head>
<body class="font-sans bg-gray-100 min-h-screen flex">
  <!-- Sidebar -->
  <aside class="w-64 bg-shades-black text-white min-h-screen fixed">
    <div class="p-4">
      <div class="flex items-center mb-8">
        <span class="text-2xl font-bold tracking-tight">SHADES</span>
        <span class="ml-2 text-xs font-medium px-2 py-1 bg-white text-black rounded">Admin</span>
      </div>
      
      <!-- Navigation -->
      <nav class="space-y-1">
        <a href="/admin/dashboard" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-tachometer-alt w-5 h-5 mr-3"></i>
          <span>Dashboard</span>
        </a>
        <a href="/admin/sales-report" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-chart-line  w-5 h-5 mr-3"></i>
          <span>Sales report</span>
        </a>
        <a href="/admin/products" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-box w-5 h-5 mr-3"></i>
          <span>Products</span>
        </a>
        <a href="/admin/addProducts" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-plus-circle w-5 h-5 mr-3"></i>
          <span>Add Product</span>
        </a>
        <a href="/admin/categories" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-folder w-5 h-5 mr-3"></i>
          <span>Categories</span>
        </a>
        <a href="/admin/brands" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-tags w-5 h-5 mr-3"></i>
          <span>Brands</span>
        </a>
        <a href="/admin/customers" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-users w-5 h-5 mr-3"></i>
          <span>Customers</span>
        </a>
        <a href="/admin/orders" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-shopping-cart w-5 h-5 mr-3"></i>
          <span>Orders</span>
        </a>
        <a href="/admin/coupons" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:bg-white hover:bg-opacity-10 rounded-lg">
          <i class="fas fa-ticket-alt w-5 h-5 mr-3"></i>
          <span>Coupons</span>
        </a>
       
      </nav>
    </div>
    
    <!-- User Profile -->
    <div class="absolute bottom-0 left-0 right-0 p-4">
      <div class="border-t border-gray-700 pt-4">
        <div class="flex items-center">
          <div class="h-8 w-8 rounded-full bg-gray-500 flex items-center justify-center text-white">
            <i class="fas fa-user text-sm"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium">Admin User</p>
            <a href="/admin/logout" class="text-xs text-gray-400 hover:text-white">Log out</a>
          </div>
        </div>
      </div>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 ml-64">
    <!-- Top Header -->
    <header class="sticky top-0 z-50 bg-white shadow-sm">
  <div class="flex justify-between items-center px-6 py-4">
    <h1 class="text-2xl font-bold text-gray-800">
      <%= pageTitle || 'Admin Panel' %>
    </h1>
    <div class="flex items-center space-x-4">
      <button class="relative p-2 text-gray-600 hover:text-black">
        <i class="fas fa-bell"></i>
        <span class="absolute top-1 right-1 h-2 w-2 rounded-full bg-red-500"></span>
      </button>
      <button class="relative p-2 text-gray-600 hover:text-black">
        <i class="fas fa-envelope"></i>
        <span class="absolute top-1 right-1 h-2 w-2 rounded-full bg-red-500"></span>
      </button>
    </div>
  </div>
</header>
