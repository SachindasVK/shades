</div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const closeMenuToggle = document.getElementById('close-menu-toggle');
      const sidebarMenu = document.querySelector('aside');
      
      // Toggle sidebar on mobile
      mobileMenuToggle.addEventListener('click', function() {
        sidebarMenu.classList.toggle('-translate-x-full');
        sidebarMenu.classList.toggle('translate-x-0');
      });

      closeMenuToggle.addEventListener('click', function() {
        sidebarMenu.classList.add('-translate-x-full');
        sidebarMenu.classList.remove('translate-x-0');
      });

      // Close sidebar when clicking outside on mobile
      document.addEventListener('click', function(event) {
        if (!sidebarMenu.contains(event.target) && !mobileMenuToggle.contains(event.target) && !sidebarMenu.classList.contains('-translate-x-full')) {
          sidebarMenu.classList.add('-translate-x-full');
          sidebarMenu.classList.remove('translate-x-0');
        }
      });

      // Navigation active state handling
      const navLinks = document.querySelectorAll('.nav-link');
      
      function setActiveLink(link) {
        navLinks.forEach(link => {
          link.classList.remove('bg-white', 'bg-opacity-20', 'text-white');
          link.classList.add('text-gray-300');
        });
        link.classList.add('bg-white', 'bg-opacity-20', 'text-white');
        link.classList.remove('text-gray-300');
      }

      navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          setActiveLink(this);
          // Close sidebar on mobile after clicking a link
          if (window.innerWidth < 768) {
            sidebarMenu.classList.add('-translate-x-full');
            sidebarMenu.classList.remove('translate-x-0');
          }
        });
      });

      // Set active link based on current URL
      const currentPath = window.location.pathname;
      navLinks.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
          setActiveLink(link);
        }
      });

      // Confirmation dialog for block/unblock actions
      function confirmAction(message, url) {
        const modal = document.getElementById('confirmationModal');
        const modalMessage = document.getElementById('modalMessage');
        const confirmBtn = document.getElementById('confirmBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        
        modalMessage.textContent = message;
        confirmBtn.href = url;
        modal.classList.remove('hidden');
        
        cancelBtn.onclick = function() {
          modal.classList.add('hidden');
        }
        
        modal.onclick = function(event) {
          if (event.target === modal) {
            modal.classList.add('hidden');
          }
        }
      }

      // Adjust main content margin based on sidebar visibility
      function adjustMainContentMargin() {
        const main = document.querySelector('main');
        if (window.innerWidth >= 768) {
          main.classList.add('md:ml-64');
        } else {
          main.classList.remove('md:ml-64');
        }
      }

      window.addEventListener('resize', adjustMainContentMargin);
      adjustMainContentMargin();
    });
  </script>
