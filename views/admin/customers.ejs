<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SHADES - Admin Customers management</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link rel="icon" href="/favicon-16x16.png" type="image/png">
    <script defer src="/script/admin.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              'shades-black': '#111111',
              'shades-gray': '#F5F5F7',
            },
          },
        },
      };
    </script>
  </head>

  <body class="bg-shades-black">
    <%- include('../partials/admin/header') %>
    <main class="flex-1 md:ml-64 transition-all duration-300">
      <!-- Top Header -->
      <header class="sticky top-0 z-40 bg-shades-black shadow-sm">
        <div class="flex justify-between items-center px-4 sm:px-6 py-4">
          <button id="mobile-menu-toggle" class="md:hidden text-gray-800 focus:outline-none">
            <i class="fas fa-bars text-xl"></i>
          </button>
          <h1 class="text-white font-medium">Admin Dashboard</h1>
        </div>
      </header>
      <!-- Customers Content -->
      <div class="p-4 sm:p-6 lg:p-8 max-w-7xl mx-auto">
        <!-- Search and Filter Bar -->
        <div class="bg-black rounded-lg shadow-sm p-4 sm:p-5">
          <form
            id="searchForm"
            action="/admin/customers"
            method="GET"
            class="flex flex-col sm:flex-row sm:flex-wrap gap-4 items-start sm:items-end"
          >
            <div class="flex-1 w-full sm:w-auto">
              <label class="block text-sm font-medium text-white mb-1">Search Customers</label>
              <div class="relative">
                <input
                  type="text"
                  name="search"
                  value="<%= locals.search || '' %>"
                  placeholder="Search by name or email..."
                  class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-800 text-white bg-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
                <div class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
                  <i class="fas fa-search"></i>
                </div>
              </div>
            </div>
            <div class="flex gap-2 w-full sm:w-auto">
              <button
                type="submit"
                class="px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition ease-in focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 w-full sm:w-auto"
              >
                Search
              </button>
              <a
                href="/admin/customers"
                class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 inline-flex items-center justify-center w-full sm:w-auto"
              >
                Clear
              </a>
            </div>
          </form>
        </div>

        <!-- Customers Table -->
        <div class="bg-black rounded-lg shadow-sm overflow-hidden">
          <div
            class="px-4 sm:px-6 py-4 flex flex-col sm:flex-row sm:justify-between sm:items-center border-b border-gray-200"
          >
            <h3 class="text-lg font-semibold mb-2 sm:mb-0 text-white">All Customers</h3>
          </div>

          <div class="overflow-x-auto">
            <div class="overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-950">
      <tr>
        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Name</th>
        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Email</th>
        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider hidden md:table-cell">Joined Date</th>
        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Orders</th>
        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Status</th>
        <th class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Details</th>
        <th class="px-4 sm:px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-black divide-y divide-gray-200">
      <% if (locals.userData && userData.length > 0) { %>
        <% userData.forEach(user => { %>
          <tr class="hover:bg-gray-950">
            <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-200"><%= user.name || 'N/A' %></div>
            </td>
            <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-200"><%= user.email %></div>
            </td>
            <td class="px-4 sm:px-6 py-4 whitespace-nowrap hidden md:table-cell">
              <div class="text-sm text-gray-500">
                <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
              </div>
            </td>
            <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-center">
              <div class="text-sm text-gray-200"><%= user.orderCount || 0 %></div>
            </td>
            <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
              <% if (user.isBlocked) { %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Blocked</span>
              <% } else { %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Active</span>
              <% } %>
            </td>
            <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
              <a href="/admin/customer/details/<%= user._id %>" 
                 class="px-3 py-1 text-gray-200 rounded-md font-semibold text-sm hover:underline transition-colors">
                View
              </a>
            </td>
            <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <button type="button"
                class="w-full sm:w-24 px-3 py-1 rounded-md text-sm font-medium transition-colors hover:underline <%= user.isBlocked ? 'text-green-600 hover:text-green-700' : 'text-red-600 hover:text-red-700' %>"
                onclick="openModal('<%= user._id %>', '<%= user.isBlocked ? 'unblock' : 'block' %>')"
                data-user-id="<%= user._id %>"
                data-action="<%= user.isBlocked ? 'unblock' : 'block' %>">
                <%= user.isBlocked ? 'Unblock' : 'Block' %>
              </button>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7" class="px-4 sm:px-6 py-4 text-center text-sm text-gray-500">
            No customers found.
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

          </div>

          <!-- Pagination -->
          <% if (locals.count> 0) { %>
          <div class="px-4 sm:px-6 py-4 border-t border-gray-200">
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
              <div class="text-sm text-gray-200">
                Showing
                <span class="font-medium">
                  <%= ((locals.currentPage || 1) - 1) * limit + 1 %>
                </span>
                to
                <span class="font-medium">
                  <%= Math.min((locals.currentPage || 1) * limit, count) %>
                </span>
                of <span class="font-medium"> <%= count %> </span> customers
              </div>
              <nav class="flex flex-wrap gap-2 justify-center sm:justify-end">
                <% if ((locals.currentPage || 1)> 1) { %>
                <a
                  href="/admin/customers?page=<%= (locals.currentPage || 1) - 1 %><%= locals.search ? `&search=${search}` : '' %>"
                  class="px-3 py-1 rounded-md text-sm font-medium bg-black text-gray-300 hover:bg-gray-950 transition ease-in"
                >
                  Previous
                </a>
                <% } else { %>
                <span
                  class="px-3 py-1 rounded-md text-sm font-medium bg-black text-gray-300 hover:bg-gray-950 transition ease-in cursor-not-allowed"
                >
                  Previous
                </span>
                <% } %>

                <% const totalPages=Math.ceil(count / limit); const currentPage=locals.currentPage || 1; for
                          (let i=1; i <=totalPages; i++) { %>
                <% if (i===currentPage) { %>
                <span class="px-3 py-1 rounded-md text-sm font-medium bg-blue-600 text-white">
                  <%= i %>
                </span>
                <% } else if (i <=3 || i>= totalPages - 2 || Math.abs(i - currentPage) <= 1) { %>
                <a
                  href="/admin/customers?page=<%= i %><%= locals.search ? `&search=${search}` : '' %>"
                  class="px-3 py-1 rounded-md text-sm font-medium bg-gray-200 text-gray-700 hover:bg-gray-300"
                >
                  <%= i %>
                </a>
                <% } else if (i===4 && currentPage> 5) { %>
                <span class="px-3 py-1 text-sm font-medium text-gray-500">...</span>
                <% } else if (i===totalPages - 3 && currentPage < totalPages - 4) { %>
                <span class="px-3 py-1 text-sm font-medium text-gray-500">...</span>
                <% } %>
                <% } %>

                <% if ((locals.currentPage || 1) < Math.ceil(count / limit)) { %>
                <a
                  href="/admin/customers?page=<%= (locals.currentPage || 1) + 1 %><%= locals.search ? `&search=${search}` : '' %>"
                  class="px-3 py-1 rounded-md text-sm font-medium bg-black text-gray-300 hover:bg-gray-950 transition ease-in"
                >
                  Next
                </a>
                <% } else { %>
                <span
                  class="px-3 py-1 rounded-md text-sm font-medium bg-black text-gray-300 hover:bg-gray-950 transition ease-in cursor-not-allowed"
                >
                  Next
                </span>
                <% } %>
              </nav>
            </div>
          </div>
          <% } %>
        </div>
      </div>

      <!-- Confirmation Modal -->
      <div id="confirmationModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
        <div class="flex items-center justify-center min-h-screen p-4">
          <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md mx-auto">
            <h3 class="text-lg font-bold mb-4 text-center" id="modalTitle">Confirm Action</h3>
            <p class="text-gray-700 mb-6 text-center text-sm" id="modalMessage"></p>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
              <button
                id="cancelBtn"
                class="px-5 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm"
              >
                Cancel
              </button>
              <button
                id="confirmBtn"
                class="px-5 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm"
              >
                Confirm
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="p-4 sm:p-6"></div>
    </main>
    <script>
      let selectedUserId = null;
      let selectedAction = null;

      function openModal(userId, action) {
        selectedUserId = userId;
        selectedAction = action;

        document.getElementById('modalTitle').innerText =
          action === 'block' ? 'Confirm Block' : 'Confirm Unblock';

        document.getElementById('modalMessage').innerText =
          action === 'block'
            ? 'Are you sure you want to block this user?'
            : 'Are you sure you want to unblock this user?';

        document.getElementById('confirmationModal').classList.remove('hidden');
      }

      document.getElementById('cancelBtn').addEventListener('click', () => {
        document.getElementById('confirmationModal').classList.add('hidden');
      });

      document.getElementById('confirmBtn').addEventListener('click', async () => {
        if (!selectedUserId || !selectedAction) return;

        try {
          const response = await fetch(`/admin/customers/${selectedUserId}/${selectedAction}`, {
            method: 'PATCH',
            headers: {
              'Content-Type': 'application/json',
            },
          });

          if (response.ok) {
            document.getElementById('confirmationModal').classList.add('hidden');
            reloadPageAfterDelay();
          } else {
            console.error('Failed to update user status');
          }
        } catch (err) {
          console.error('Error:', err);
        }
      });
    </script>
  </body>
</html>
