<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SHADES - Admin Customers management</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="icon" href="favicon/favicon.ico" type="ico">
</head>
<body class="min-h-screen bg-gray-100">
<%- include('../partials/admin/header') %>
  <!-- Customers Content -->
  <div class="p-4 sm:p-6 lg:p-8 max-w-7xl mx-auto">
    <!-- Search and Filter Bar -->
    <div class="bg-white rounded-lg shadow-sm p-4 sm:p-5 mb-6">
      <form id="searchForm" action="/admin/customers" method="GET" class="flex flex-col sm:flex-row sm:flex-wrap gap-4 items-start sm:items-end">
        <div class="flex-1 w-full sm:w-auto">
          <label class="block text-sm font-medium text-gray-700 mb-1">Search Customers</label>
          <div class="relative">
            <input type="text" name="search" value="<%= locals.search || '' %>" placeholder="Search by name or email..."
              class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
            <div class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
              <i class="fas fa-search"></i>
            </div>
          </div>
        </div>
        <div class="flex gap-2 w-full sm:w-auto">
          <button type="submit" class="flex-1 sm:flex-none px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors text-sm">
            Search
          </button>
          <a href="/admin/customers"
            class="flex-1 sm:flex-none px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm">
            Clear
          </a>
        </div>
      </form>
    </div>

    <!-- Customers Table -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="px-4 sm:px-6 py-4 flex flex-col sm:flex-row sm:justify-between sm:items-center border-b border-gray-200">
        <h3 class="text-lg font-semibold mb-2 sm:mb-0">All Customers</h3>
        <p class="text-sm text-gray-500">Showing <%= locals.userData ? userData.length : 0 %> of <%= locals.count || 0 %> customers</p>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-black hidden sm:table-header-group">
            <tr>
              <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
                Name
              </th>
              <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
                Email
              </th>
              <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
                Joined Date
              </th>
              <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
                Orders
              </th>
              <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
                Status
              </th>
              <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
                Details
              </th>
              <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (locals.userData && userData.length > 0) { %>
              <% userData.forEach(user => { %>
                <tr class="flex flex-col sm:table-row border-b sm:border-none p-4 sm:p-0">
                  <td class="px-4 sm:px-6 py-2 sm:py-4 flex items-center sm:table-cell">
                    <span class="sm:hidden font-medium mr-2">Name:</span>
                    <div class="flex items-center">
                      <div class="ml-3">
                        <div class="text-sm font-medium text-gray-900">
                          <%= user.name || 'N/A' %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-4 sm:px-6 py-2 sm:py-4">
                    <span class="sm:hidden font-medium mr-2">Email:</span>
                    <div class="text-sm text-gray-900">
                      <%= user.email %>
                    </div>
                  </td>
                  <td class="px-4 sm:px-6 py-2 sm:py-4">
                    <span class="sm:hidden font-medium mr-2">Joined:</span>
                    <div class="text-sm text-gray-900">
                      <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                    </div>
                  </td>
                  <td class="px-4 sm:px-6 py-2 sm:py-4">
                    <span class="sm:hidden font-medium mr-2">Orders:</span>
                    <div class="text-sm text-gray-900">
                      <%= user.orderCount || 0 %>
                    </div>
                  </td>
                  <td class="px-4 sm:px-6 py-2 sm:py-4">
                    <span class="sm:hidden font-medium mr-2">Status:</span>
                    <% if (user.isBlocked) { %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                        Blocked
                      </span>
                    <% } else { %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        Active
                      </span>
                    <% } %>
                  </td>
                  <td class="px-4 sm:px-6 py-2 sm:py-4">
                    <span class="sm:hidden font-medium mr-2">Details:</span>
                    <div class="px-3 py-1 bg-white text-black rounded-md font-semibold text-sm hover:underline transition-colors">
                      <a href="/admin/customer/details/<%= user._id %>">
                        View
                      </a>
                    </div>
                  </td>
                  <td class="px-4 sm:px-6 py-2 sm:py-4 text-right">
                    <span class="sm:hidden font-medium mr-2">Actions:</span>
                    <div class="flex justify-end space-x-2">
                      <button type="button"
                        class="w-full sm:w-24 px-3 py-1 rounded-md text-sm font-medium transition-colors <%= user.isBlocked ? 'text-green-600 hover:text-green-700 bg-green-50 hover:bg-green-100' : 'text-red-600 hover:text-red-700 bg-red-50 hover:bg-red-100' %>"
                        onclick="openModal('<%= user._id %>', '<%= user.isBlocked ? 'unblock' : 'block' %>')"
                        data-user-id="<%= user._id %>" data-action="<%= user.isBlocked ? 'unblock' : 'block' %>">
                        <%= user.isBlocked ? 'Unblock' : 'Block' %>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="px-4 sm:px-6 py-4 text-center text-sm text-gray-500">
                  No customers found.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (locals.count > 0) { %>
        <div class="px-4 sm:px-6 py-4 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
            <div class="text-sm text-gray-500">
              Showing <span class="font-medium">
                <%= ((locals.currentPage || 1) - 1) * limit + 1 %>
              </span> to
              <span class="font-medium">
                <%= Math.min((locals.currentPage || 1) * limit, count) %>
              </span> of
              <span class="font-medium">
                <%= count %>
              </span> customers
            </div>
            <nav class="flex flex-wrap gap-2 justify-center sm:justify-end">
              <% if ((locals.currentPage || 1) > 1) { %>
                <a href="/admin/customers?page=<%= (locals.currentPage || 1) - 1 %><%= locals.search ? `&search=${search}` : '' %>"
                  class="px-3 py-1 rounded-md text-sm font-medium bg-gray-200 text-gray-700 hover:bg-gray-300">
                  Previous
                </a>
              <% } else { %>
                <span class="px-3 py-1 rounded-md text-sm font-medium bg-gray-100 text-gray-400 cursor-not-allowed">
                  Previous
                </span>
              <% } %>

              <% const totalPages = Math.ceil(count / limit); const currentPage = locals.currentPage || 1; for (let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                  <span class="px-3 py-1 rounded-md text-sm font-medium bg-blue-600 text-white">
                    <%= i %>
                  </span>
                <% } else if (i <= 3 || i >= totalPages - 2 || Math.abs(i - currentPage) <= 1) { %>
                  <a href="/admin/customers?page=<%= i %><%= locals.search ? `&search=${search}` : '' %>"
                    class="px-3 py-1 rounded-md text-sm font-medium bg-gray-200 text-gray-700 hover:bg-gray-300">
                    <%= i %>
                  </a>
                <% } else if (i === 4 && currentPage > 5) { %>
                  <span class="px-3 py-1 text-sm font-medium text-gray-500">...</span>
                <% } else if (i === totalPages - 3 && currentPage < totalPages - 4) { %>
                  <span class="px-3 py-1 text-sm font-medium text-gray-500">...</span>
                <% } %>
              <% } %>

              <% if ((locals.currentPage || 1) < Math.ceil(count / limit)) { %>
                <a href="/admin/customers?page=<%= (locals.currentPage || 1) + 1 %><%= locals.search ? `&search=${search}` : '' %>"
                  class="px-3 py-1 rounded-md text-sm font-medium bg-gray-200 text-gray-700 hover:bg-gray-300">
                  Next
                </a>
              <% } else { %>
                <span class="px-3 py-1 rounded-md text-sm font-medium bg-gray-100 text-gray-400 cursor-not-allowed">
                  Next
                </span>
              <% } %>
            </nav>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Confirmation Modal -->
  <div id="confirmationModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md mx-auto">
        <h3 class="text-lg font-bold mb-4 text-center" id="modalTitle">Confirm Action</h3>
        <p class="text-gray-700 mb-6 text-center text-sm" id="modalMessage"></p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button id="cancelBtn"
            class="px-5 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm">
            Cancel
          </button>
          <button id="confirmBtn" class="px-5 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm">
            Confirm
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    let selectedUserId = null;
    let selectedAction = null;

    function openModal(userId, action) {
      selectedUserId = userId;
      selectedAction = action;

      document.getElementById('modalTitle').innerText =
        action === 'block' ? 'Confirm Block' : 'Confirm Unblock';

      document.getElementById('modalMessage').innerText =
        action === 'block'
          ? 'Are you sure you want to block this user?'
          : 'Are you sure you want to unblock this user?';

      document.getElementById('confirmationModal').classList.remove('hidden');
    }

    document.getElementById('cancelBtn').addEventListener('click', () => {
      document.getElementById('confirmationModal').classList.add('hidden');
    });

    document.getElementById('confirmBtn').addEventListener('click', async () => {
      if (!selectedUserId || !selectedAction) return;

      try {
        const response = await fetch(`/admin/customers/${selectedUserId}/${selectedAction}`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          }
        });

        if (response.ok) {
          document.getElementById('confirmationModal').classList.add('hidden');
          window.location.reload();
        } else {
          console.error('Failed to update user status');
        }
      } catch (err) {
        console.error('Error:', err);
      }
    });
  </script>
</body>
</html>