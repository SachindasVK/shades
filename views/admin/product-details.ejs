<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SHADES - Admin Product details</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="icon" href="favicon/favicon.ico" type="ico">
</head>
<body class="bg-gray-100 font-sans">
  <%- include('../partials/admin/header') %>
  <div class="p-4 sm:p-6 max-w-7xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <!-- Page Header -->
      <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between space-y-4 sm:space-y-0">
          <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-4 sm:space-y-0 sm:space-x-4 w-full sm:w-auto">
            <a href="/admin/products" class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors w-full sm:w-auto text-center">
              <i class="fas fa-arrow-left mr-2"></i> Back to Products
            </a>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-900"><%= product.productName %></h3>
          </div>
          <div class="flex space-x-2 w-full sm:w-auto">
            <a href="/admin/productEdit/<%= product._id %>">
              <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 w-full sm:w-auto">
                <i class="fas fa-edit mr-2"></i> Edit Product
              </button>
            </a>
          </div>
        </div>
      </div>

      <!-- Product Details Content -->
      <div class="p-4 sm:p-6">
        <% if (product) { %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
            <!-- Product Images -->
            <div>
              <h4 class="text-md sm:text-lg font-medium text-gray-700 mb-4">Product Images</h4>
              <div class="grid grid-cols-2 gap-4">
                <% for(let i = 0; i < Math.min(product.productImage.length, 4); i++) { %>
                  <img src="<%= product.productImage[i] %>" alt="<%= product.productName %>" class="w-full h-32 sm:h-48 object-contain rounded-lg border border-gray-200">
                <% } %>
                <% if (product.productImage.length < 4) { %>
                  <% for(let i = product.productImage.length; i < 4; i++) { %>
                    <div class="w-full h-32 sm:h-48 bg-gray-100 rounded-lg border border-gray-200 flex items-center justify-center">
                      <span class="text-gray-500 text-sm">No Image</span>
                    </div>
                  <% } %>
                <% } %>
              </div>
            </div>

            <!-- Product Information -->
            <div>
              <h4 class="text-md sm:text-lg font-medium text-gray-700 mb-4">Product Information</h4>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 border border-gray-300 rounded-lg">
                  <tbody class="divide-y divide-gray-200">
                    <tr>
                      <th class="text-left px-3 sm:px-4 py-2 sm:py-3 text-sm font-medium text-gray-500 bg-gray-50">Product Name</th>
                      <td class="px-3 sm:px-4 py-2 sm:py-3 text-gray-900 font-medium"><%= product.productName %></td>
                    </tr>
                    <tr>
                      <th class="text-left px-3 sm:px-4 py-2 sm:py-3 text-sm font-medium text-gray-500 bg-gray-50">Category</th>
                      <td class="px-3 sm:px-4 py-2 sm:py-3 text-gray-900 font-medium"><%= product.category.name || 'N/A' %></td>
                    </tr>
                    <tr>
                      <th class="text-left px-3 sm:px-4 py-2 sm:py-3 text-sm font-medium text-gray-500 bg-gray-50">Brand</th>
                      <td class="px-3 sm:px-4 py-2 sm:py-3 text-gray-900 font-medium"><%= product.brand.name || 'N/A' %></td>
                    </tr>
                    <tr>
                      <th class="text-left px-3 sm:px-4 py-2 sm:py-3 text-sm font-medium text-gray-500 bg-gray-50">Regular Price</th>
                      <td class="px-3 sm:px-4 py-2 sm:py-3 text-gray-900 font-medium">₹<%= product.regularPrice.toFixed(2) %></td>
                    </tr>
                    <tr>
                      <th class="text-left px-3 sm:px-4 py-2 sm:py-3 text-sm font-medium text-gray-500 bg-gray-50">Discount</th>
                      <td class="px-3 sm:px-4 py-2 sm:py-3">
                        <% if(product.hasOffer) { %>
                          <span class="px-2 py-1 inline-flex text-xs font-semibold rounded-full bg-green-100 text-green-800">
                            <%= product.offerPercentage %>% Off
                          </span>
                        <% } else { %>
                          <span class="px-2 py-1 inline-flex text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                            No Discount
                          </span>
                        <% } %>
                      </td>
                    </tr>
                    <tr>
                      <th class="text-left px-3 sm:px-4 py-2 sm:py-3 text-sm font-medium text-gray-500 bg-gray-50">Sales Price</th>
                      <td class="px-3 sm:px-4 py-2 sm:py-3 text-gray-900 font-medium">₹<%= product.salePrice.toFixed(2) %></td>
                    </tr>
                    <tr>
                      <th class="text-left px-3 sm:px-4 py-2 sm:py-3 text-sm font-medium text-gray-500 bg-gray-50">Quantity</th>
                      <td class="px-3 sm:px-4 py-2 sm:py-3 text-gray-900 font-medium"><%= product.quantity %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% } else { %>
          <div class="text-center py-6">
            <p class="text-gray-500">Product not found.</p>
            <a href="/admin/products" class="text-blue-600 hover:text-blue-900">Return to Product List</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('../partials/admin/footer') %>
</body>
</html>