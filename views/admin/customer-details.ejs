<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SHADES - Admin Customer Details</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="icon" href="favicon/favicon.ico" type="ico">
</head>
<body class="bg-gray-100 font-sans">
  <%- include('../partials/admin/header') %>
  <div class="p-4 sm:p-6 max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 mb-4">
      <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between space-y-4 sm:space-y-0">
        <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-4 sm:space-y-0 sm:space-x-4 w-full sm:w-auto">
          <a href="/admin/customers" class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors w-full sm:w-auto text-center">
            <i class="fas fa-arrow-left mr-2"></i> Back to Customers
          </a>
          <h1 class="text-xl sm:text-2xl font-bold text-gray-900"><%= user.name %> Details</h1>
        </div>
        <div class="flex space-x-2 w-full sm:w-auto">
          <% if (user.isBlocked) { %>
            <button onclick="openModal('<%= user._id %>', 'unblock')" class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors w-full sm:w-auto">
              <i class="fas fa-unlock mr-2"></i> Unblock
            </button>
          <% } else { %>
            <button onclick="openModal('<%= user._id %>', 'block')" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors w-full sm:w-auto">
              <i class="fas fa-ban mr-2"></i> Block
            </button>
          <% } %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
      <!-- Customer Information -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6">
          <div class="text-center mb-6">
            <% if (user.image) { %>
              <img src="<%= user.image %>" alt="Profile Image" class="h-20 w-20 sm:h-24 sm:w-24 mx-auto object-cover rounded-full" />
            <% } else { %>
              <div class="h-20 w-20 sm:h-24 sm:w-24 mx-auto rounded-full bg-gray-200 flex items-center justify-center text-gray-500 mb-4">
                <% if (user.name) { %>
                  <span class="text-xl sm:text-2xl font-bold">
                    <%= user.name.charAt(0).toUpperCase() %>
                  </span>
                <% } %>
              </div>
            <% } %>
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900">
              <%= user.name || 'N/A' %>
            </h2>
            <p class="text-sm text-gray-500">
              <%= user.email %>
            </p>
            <div class="mt-3">
              <% if (user.isBlocked) { %>
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-red-100 text-red-800">
                  <i class="fas fa-ban mr-1"></i> Blocked
                </span>
              <% } else { %>
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-green-100 text-green-800">
                  <i class="fas fa-check-circle mr-1"></i> Active
                </span>
              <% } %>
            </div>
          </div>

          <div class="space-y-4">
            <div class="border-b border-gray-200 pb-3">
              <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">
                Contact Information
              </h3>
            </div>
            <div class="space-y-3">
              <div class="flex items-center">
                <i class="fas fa-envelope w-5 h-5 text-gray-400 mr-3"></i>
                <div>
                  <p class="text-sm text-gray-500">Email</p>
                  <p class="text-sm font-medium text-gray-900">
                    <%= user.email %>
                  </p>
                </div>
              </div>
              <% if (address && address.length > 0) { %>
                <% address.forEach((addr, index) => { %>
                  <div class="flex items-center">
                    <i class="fas fa-phone w-5 h-5 text-gray-400 mr-3"></i>
                    <div>
                      <p class="text-sm text-gray-500">Phone</p>
                      <p class="text-sm font-medium text-gray-900">
                        <%= addr.phone %>
                      </p>
                    </div>
                  </div>
                <% }) %>
              <% } %>
              <div class="flex items-center">
                <i class="fas fa-calendar w-5 h-5 text-gray-400 mr-3"></i>
                <div>
                  <p class="text-sm text-gray-500">Joined Date</p>
                  <p class="text-sm font-medium text-gray-900">
                    <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                  </p>
                </div>
              </div>
              <div class="flex items-center">
                <i class="fas fa-clock w-5 h-5 text-gray-400 mr-3"></i>
                <div>
                  <p class="text-sm text-gray-500">Last Updated</p>
                  <p class="text-sm font-medium text-gray-900">
                    <%= new Date(user.updatedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Address and Quick Stats -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 mb-4">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold">Address Information</h3>
          </div>
          <% if (address && address.length > 0) { %>
            <div class="grid grid-cols-1 gap-4">
              <% address.forEach((addr, index) => { %>
                <div class="border border-gray-200 rounded-lg p-4">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="font-medium text-gray-900">
                      <%= addr.addressType || `Address ${index + 1}` %>
                    </h4>
                    <% if (addr.isDefault) { %>
                      <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">Default</span>
                    <% } %>
                  </div>
                  <div class="text-sm text-gray-600 space-y-1">
                    <p><%= addr.name %></p>
                    <p><%= addr.houseName %>, <%= addr.area %></p>
                    <p><%= addr.landMark %></p>
                    <p><%= addr.city %>, <%= addr.state %> <%= addr.pincode %></p>
                    <% if (addr.phone) { %>
                      <p class="flex items-center">
                        <i class="fas fa-phone mr-2"></i>
                        <%= addr.phone %>
                      </p>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <div class="text-center py-8">
              <i class="fas fa-map-marker-alt text-3xl text-gray-300 mb-3"></i>
              <p class="text-gray-500">No addresses found for this customer.</p>
            </div>
          <% } %>
        </div>
        <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6">
          <h3 class="text-lg font-semibold mb-4">Quick Stats</h3>
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Total Orders</span>
              <span class="text-lg font-semibold text-gray-900">
                <%= user.orderCount || 0 %>
              </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Account Status</span>
              <span class="text-sm font-medium <%= user.isBlocked ? 'text-red-600' : 'text-green-600' %>">
                <%= user.isBlocked ? 'Blocked' : 'Active' %>
              </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Customer ID</span>
              <span class="text-sm font-mono text-gray-600">#<%= user._id.toString().slice(-8).toUpperCase() %></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Orders -->
    <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 mt-4">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold">Recent Orders</h3>
        <a href="/admin/orders?customer=<%= user._id %>" class="text-sm text-blue-600 hover:text-blue-800">View All Orders</a>
      </div>
      <% if (orders && orders.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% orders.forEach(order => { %>
                <tr>
                  <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    #<%= order.orderId || order._id.toString().slice(-8).toUpperCase() %>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= new Date(order.createdAt).toLocaleDateString('en-GB') %>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900">
                    â‚¹<%= order.finalAmount || order.totalPrice %>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= order.status === 'delivered' ? 'bg-green-100 text-green-800' : order.status === 'cancelled' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= order.status %>
                    </span>
                  </td>
                  <td class="px-4 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a href="/admin/order/<%= order.orderId %>">
                      <button class="view-order text-blue-600 hover:underline">View</button>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-8">
          <i class="fas fa-shopping-cart text-3xl text-gray-300 mb-3"></i>
          <p class="text-gray-500">No orders found for this customer.</p>
        </div>
      <% } %>
    </div>

    <!-- Confirmation Modal -->
    <div id="confirmationModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl p-6 max-w-md w-full">
        <h3 class="text-lg font-bold mb-4 text-center" id="modalTitle">Confirm Action</h3>
        <p class="text-gray-700 mb-6 text-center" id="modalMessage"></p>
        <div class="flex flex-col sm:flex-row justify-center space-y-3 sm:space-y-0 sm:space-x-4">
          <button id="cancelBtn" class="px-5 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors w-full sm:w-auto">Cancel</button>
          <button id="confirmBtn" class="px-5 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors w-full sm:w-auto">Confirm</button>
        </div>
      </div>
    </div>

    <!-- Order Details Modal -->
    <div id="orderModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center hidden z-50 p-4">
      <div class="bg-white rounded-lg p-6 w-full max-w-2xl">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold">Order Details</h3>
          <button id="closeModal" class="text-gray-500 hover:text-black">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <div id="orderDetailsContent">
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/admin/footer') %>

  <script>
    let selectedUserId = null;
    let selectedAction = null;

    function openModal(userId, action) {
      selectedUserId = userId;
      selectedAction = action;

      document.getElementById('modalTitle').innerText =
        action === 'block' ? 'Confirm Block' : 'Confirm Unblock';

      document.getElementById('modalMessage').innerText =
        action === 'block'
          ? 'Are you sure you want to block this user?'
          : 'Are you sure you want to unblock this user?';

      document.getElementById('confirmationModal').classList.remove('hidden');
    }

    document.getElementById('cancelBtn').addEventListener('click', () => {
      document.getElementById('confirmationModal').classList.add('hidden');
    });

    document.getElementById('closeModal').addEventListener('click', () => {
      document.getElementById('orderModal').classList.add('hidden');
    });

    document.getElementById('confirmBtn').addEventListener('click', async () => {
      if (!selectedUserId || !selectedAction) return;

      try {
        const response = await fetch(`/admin/customers/${selectedUserId}/${selectedAction}`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          }
        });

        if (response.ok) {
          document.getElementById('confirmationModal').classList.add('hidden');
          window.location.reload();
        } else {
          console.error('Failed to update user status');
        }
      } catch (err) {
        console.error('Error:', err);
      }
    });
  </script>
</body>
</html>